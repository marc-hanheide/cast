# generate all loggers using the CAST logger factory
log4j.loggerFactory=cast.core.logging.ComponentLoggerFactory

# Set root logger level to TRACE, so all output is sent to remote Ice logger
log4j.rootLogger=TRACE,ice
log4j.appender.ice=cast.core.logging.IceAppender

# Set location of logging server. These are the default values.
# log4j.appender.ice.Host=localhost
# log4j.appender.ice.Port=10511
